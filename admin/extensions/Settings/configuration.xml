<?xml version="1.0" encoding="UTF-8"?>
<conf>

    <title>Settings</title>
    <base>settings</base>
    <icon>fa fa-cog</icon>

    <router>
        <route>
            <item>
                <pattern>{setting}</pattern>
                <controller>AdminController\Settings\ViewSettingsController</controller>
            </item>
            <item>
                <pattern>save</pattern>
                <controller>AdminController\Settings\SaveSettingsController</controller>
            </item>
        </route>
        <token>
            <item>
                <name>setting</name>
                <pattern>(general)</pattern>
            </item>
        </token>
    </router>

    <menu>
        <item>
            <title>General</title>
            <link>general</link>
        </item>
    </menu>

</conf>
