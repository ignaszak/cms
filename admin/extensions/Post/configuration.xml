<?xml version="1.0" encoding="UTF-8"?>
<conf>

    <title>Post</title>
    <base>post</base>
    <icon>fa fa-thumb-tack</icon>

    <router>
        <route>
            <item>
                <pattern>p/{adminPostAction:view}/{page}</pattern>
                <controller>AdminController\Post\ViewPostController</controller>
            </item>
            <item>
                <pattern>p/{adminPostAction:form}</pattern>
                <controller>AdminController\Post\SavePostController</controller>
            </item>
            <item>
                <pattern>p/{adminPostAction}/{alias}</pattern>
                <controller>AdminController\Post\EditPostController</controller>
            </item>

            <item>
                <pattern>c/{adminPostAction:view}/</pattern>
                <controller>AdminController\Post\ViewCategoryController</controller>
            </item>
            <item>
                <pattern>c/ajax/{id:([0-9]*)}/category-list.json</pattern>
                <controller>AdminController\Post\AjaxViewCategoryController</controller>
            </item>
            <item>
                <pattern>c/{adminPostAction:form}</pattern>
                <controller>AdminController\Post\AjaxSaveCategoryController</controller>
            </item>
        </route>
        <token>
            <item>
                <name>adminPostAction</name>
                <pattern>(add|edit|delete)</pattern>
            </item>
        </token>
    </router>

    <menu>
        <item>
            <title>Add new post</title>
            <link>p/add/</link>
        </item>
        <item>
            <title>View posts</title>
            <link>p/view/</link>
        </item>
        <item>
            <title>Categories</title>
            <link>c/view/</link>
        </item>
    </menu>

</conf>
