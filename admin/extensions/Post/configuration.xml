<?xml version="1.0" encoding="UTF-8"?>
<conf>

    <title>Post</title>
    <base>post</base>
    <icon>fa fa-thumb-tack</icon>

    <file>
        <script>index.php</script>
        <theme>theme/index.html</theme>
    </file>

    <router>
        <route>
            <item>
                <pattern>{adminPostAction:view}/{page}</pattern>
                <controller>AdminController\Post\ViewController</controller>
            </item>
            <item>
                <pattern>{adminPostAction:form}</pattern>
                <controller>AdminController\Post\SaveController</controller>
            </item>
            <item>
                <pattern>{adminPostAction}/{alias}</pattern>
                <controller>AdminController\Post\EditController</controller>
            </item>
        </route>
        <token>
            <item>
                <name>adminPostAction</name>
                <pattern>(add|edit|delete)</pattern>
            </item>
        </token>
    </router>

    <menu>
        <item>
            <title>Add</title>
            <link>add/</link>
        </item>
        <item>
            <title>View</title>
            <link>view/</link>
        </item>
    </menu>

</conf>
