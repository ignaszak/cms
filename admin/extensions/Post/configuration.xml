<?xml version="1.0" encoding="UTF-8"?>
<conf>

    <title>Post</title>
    
    <file>
        <script>index.php</script>
        <theme>theme/index.html</theme>
    </file>

    <router>
        <route>
            <item>
                <pattern>(post)/{adminPostAction:form}/{formAction:(new|edit)}</pattern>
                <controller>AdminController\Post\SaveController</controller>
            </item>
            <item>
                <pattern>(post)/{adminPostAction}/{page}</pattern>
            </item>
            <item>
                <pattern>(post)/{adminPostAction}/{alias}</pattern>
            </item>
        </route>
        <token>
            <item>
                <name>adminPostAction</name>
                <pattern>(add|view|edit|delete)</pattern>
            </item>
        </token>
    </router>

    <menu>
        <item>
            <title>Add</title>
            <link>post/add/</link>
        </item>
        <item>
            <title>View</title>
            <link>post/view/</link>
        </item>
    </menu>

</conf>
